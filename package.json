{
  "name": "node-pdf",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "serve": "node dist/server.js",
    "start": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build": "npm run build-ts",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js"
  },
  "dependencies": {
    "@sentry/node": "^5.0.5",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "http-errors": "^1.7.1",
    "joi": "^14.3.1",
    "morgan": "^1.9.1",
    "puppeteer": "^1.12.2",
    "typescript": "^3.3.3"
  },
  "devDependencies": {
    "@types/debug": "^4.1.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.11.1",
    "@types/http-errors": "^1.6.1",
    "@types/joi": "^14.3.1",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.4.6",
    "@types/puppeteer": "^1.12.1",
    "concurrently": "^4.1.0",
    "debug": "^4.1.1",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.4"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
